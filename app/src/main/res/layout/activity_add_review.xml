<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.AddReviewActivity"
    android:background="@color/white">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!-- 상단 앱바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 뒤로가기 버튼 -->
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_back_arrow"
                android:layout_margin="10dp"/>

            <!-- 페이지 제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/suite1"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:text="후기 작성"
                android:layout_marginRight="60dp"
                android:textStyle="bold"
                android:textColor="@android:color/darker_gray"/>
        </LinearLayout>


        <!-- 지역화폐 사용여부를 선택하는 뷰 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite1"
                android:padding="16dp"
                android:textColor="@color/black"
                android:text="지역화폐 사용여부"
                android:textSize="@dimen/body1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdo_local_yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용"
                        android:textSize="@dimen/body1"
                        android:layout_weight="1"/>

                    <RadioButton
                        android:id="@+id/rdo_local_no"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="미사용"
                        android:textSize="@dimen/body1"
                        android:layout_weight="1"/>
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
        <!-- 인당 평균 가격을 작성하는 뷰 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite1"
                android:text="인당 평균 가격"
                android:textSize="@dimen/headline6"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/edit_price"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:ems="10"
                    android:fontFamily="@font/suite1"
                    android:hint="10000"
                    android:textSize="@dimen/body1"
                    android:inputType="textPersonName"
                    android:layout_weight="1"
                    android:backgroundTint="@color/black"
                    android:textColorHint="#747679"
                    android:textColor="#5a5a5a"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/suite1"
                    android:text="원"
                    android:textSize="@dimen/headline6"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_gravity="center"/>
            </LinearLayout>

        </LinearLayout>
        <!-- 한줄 후기를 남기는 위젯 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite1"
                android:text="한줄 후기"
                android:textSize="@dimen/headline6"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <EditText
                android:id="@+id/edit_review"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:ems="10"
                android:fontFamily="@font/suite1"
                android:hint="한줄 후기"
                android:textSize="@dimen/body1"
                android:inputType="textPersonName"
                android:backgroundTint="@color/black"
                android:textColorHint="#747679"
                android:textColor="#5a5a5a" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/suite1"
                android:text="후기 사진"
                android:textSize="@dimen/headline6"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/suite1"
                android:text="후기 사진은 최대 1장까지 추가할 수 있습니다."
                android:textSize="@dimen/body1"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="#808080"/>
        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사진 추가하기"
            android:layout_gravity="center"
            android:id="@+id/galleryBtn"/>
        <HorizontalScrollView
            android:id="@+id/sv_imagelist"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:padding="10dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:id="@+id/layout_imagelist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            </LinearLayout>
        </HorizontalScrollView>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="#ff5f4d"
            android:text="저장하기"
            android:textSize="@dimen/headline6"
            android:fontFamily="@font/suite1"
            android:textColor="@color/white"
            android:textStyle="bold" />

    </LinearLayout>


</ScrollView>