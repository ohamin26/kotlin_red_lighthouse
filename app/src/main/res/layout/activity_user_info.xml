<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserInfoActivity">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <!-- 상단 앱바 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="40dp">

                <!-- 뒤로가기 버튼 -->
                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_back_arrow"
                    android:layout_margin="10dp"/>

                <!-- 페이지 제목 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/suite1"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:text="마이 페이지"
                    android:layout_marginRight="60dp"
                    android:textStyle="bold"
                    android:textColor="@android:color/darker_gray"/>

            </LinearLayout>

            <!--사용자 이메일 텍스트 뷰-->
            <TextView
                android:id="@+id/user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 이메일"
                android:textStyle="bold"
                android:textSize="32dp"
                android:layout_marginLeft="120dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/suite"
                />

            <TableLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content">
                <TableRow tools:ignore="UselessParent">
                    <!--사용자 닉네임 텍스트 뷰-->
                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="사용자 닉네임"
                        android:textStyle="bold"
                        android:textSize="32dp"
                        android:layout_marginLeft="120dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/suite"
                        />
                    <!--이메일, 닉네임 정보 수정 페이지로 이동 버튼-->
                    <Button
                        android:id="@+id/btn_edit_nickname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="수정하기"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/suite"
                        android:background="#00ff0000"
                        android:backgroundTint="@color/white"
                        android:textColor="@android:color/secondary_text_light_nodisable"
                        />
                </TableRow>
            </TableLayout>

            <!--이메일, 닉네임 정보 수정 페이지로 이동 버튼-->
            <Button
                android:id="@+id/btn_edit_pw"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:text="비밀번호 변경"
                android:layout_marginTop="40dp"
                android:textStyle="bold"
                android:textSize="23dp"
                android:fontFamily="@font/suite"
                />

            <!--나의 리뷰 페이지로 이동 버튼-->
            <Button
                android:id="@+id/btn_review"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="13dp"
                android:text="나의 리뷰 기록"
                android:textStyle="bold"
                android:textSize="23dp"
                android:fontFamily="@font/suite"
                />

            <!--고객센터 버튼, 대표 이메일 안내 화면으로 이동-->
            <Button
                android:id="@+id/btn_cs"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="13dp"
                android:text="고객센터"
                android:textStyle="bold"
                android:textSize="23dp"
                android:fontFamily="@font/suite"
                />

            <!--앱 정보 화면 이동 버튼-->
            <Button
                android:id="@+id/btn_Info"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="13dp"
                android:text="앱 정보"
                android:textStyle="bold"
                android:textSize="23dp"
                android:fontFamily="@font/suite"
                />

            <!--개인정보 처리 방침화면으로 이동 버튼-->
            <Button
                android:id="@+id/btn_policy"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="13dp"
                android:text="개인정보 처리 방침"
                android:textStyle="bold"
                android:textSize="23dp"
                android:fontFamily="@font/suite"
                />

        </LinearLayout>

    </ScrollView>
</FrameLayout>